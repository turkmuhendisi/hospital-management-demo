# =====================================
# PRODUCTION ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and fill in your values

# Application
APP_NAME="Enterprise Audit Trail Dashboard"
APP_VERSION="2.0.0"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8082

# Database
# SQLite (Development only)
# DATABASE_URL=sqlite:///./data/audit_production.db

# PostgreSQL (Production recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Example: postgresql://audit_user:secure_password@postgres.example.com:5432/audit_db

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-very-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
# Production: only your domains
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
# Development: allow all
# CORS_ORIGINS=["*"]

# Redis (Optional - for caching and real-time)
# REDIS_URL=redis://localhost:6379/0

# Data Generation
GENERATE_REALISTIC_DATA=true
DATA_GENERATION_INTERVAL=5
HISTORICAL_DATA_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =====================================
# CLOUD PLATFORM SPECIFIC
# =====================================

# Railway.app
# DATABASE_URL will be automatically set by Railway PostgreSQL addon

# Heroku
# DATABASE_URL will be automatically set by Heroku PostgreSQL addon

# Render
# DATABASE_URL will be automatically set by Render PostgreSQL

# AWS
# Use AWS Secrets Manager or Parameter Store for sensitive values

